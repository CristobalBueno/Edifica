<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/darker_gray" />
            <corners android:radius="5dp" />
        </shape>
    </item>

    <item
        android:top="1dp"
        android:bottom="2dp"
        android:left="1dp"
        android:right="1dp">
        <shape android:shape="rectangle">
            <padding android:top="5dp" android:left="5dp" android:right="5dp"
                android:bottom="5dp"/>
            <solid android:color="@color/colorYellowLight" />
            <corners android:radius="5dp" />
        </shape>
    </item>
</layer-list>